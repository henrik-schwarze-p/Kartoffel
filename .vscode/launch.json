{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run macOS",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",
      "args": [],
      "cwd": "${workspaceFolder}",
      "MIMode": "lldb",
      "preLaunchTask": "Build (macOS)"
    },
    {
      "name": "Run Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/app.exe",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "Build (Windows)"
    },
    {
      "name": "Run Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/app",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "Build (Linux)"
    }
  ]
}